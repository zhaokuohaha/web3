@model web3.Domain.Entities.Web_User

@{
    ViewBag.Title = "User.Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<h2>首页</h2>
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4><b>用户登录</b></h4>
        </div>
        <div class="panel-body">
            @Html.LabelFor(m => m.u_name)<br />
            @Html.TextBoxFor(m => m.u_name)<br /><br />
            @Html.LabelFor(m => m.u_password)<br />
            @Html.PasswordFor(m => m.u_password)<br />
            <p>
                @if (TempData["info"] != null)
                {
                    @TempData["info"]
                }
            </p>
            <input type="submit" class="btn btn-primary" value="登录" />
            <input type="reset" class="btn btn-default" value="重置" />
            <input type="text" name="validatecode" value="" />
            <img id="valiCode" style="cursor: pointer;" src="/Home/GetValidateCode" onclick="this.src = '/Home/GetValidateCode?time=' + (new Date()).getTime();" alt="验证码" />
            @TempData["valid"]
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-2 col-md-2">
        <button class="btn btn-info btn-block" onclick="javascript:location.href='@Url.Action("UserList", "Home")'">用户列表</button>
    </div>
    <div class="col-lg-2 col-md-2">
        <button class="btn btn-info btn-block" onclick="javascript:location.href='@Url.Action("Register", "Home")'">注册</button>
    </div>
    <div class="col-lg-2 col-md-2">
        <button class="btn btn-info btn-block" onclick="javascript:location.href='@Url.Action("UpdateInfo", "User")'">修改信息</button>
    </div>
    <div class="col-lg-2 col-md-2">
        <button class="btn btn-info btn-block" onclick="javascript:location.href='@Url.Action("Index", "Home")'">返回首页</button>
    </div>
</div>

<script type="text/javascript" src="http://www.cnblogs.com/Scripts/jquery-1.3.2-vsdoc.js"></script>
<script type="text/javascript">
    $(function() {
    $("#valiCode").bind("click", function() {
        this.src = "/Home/GetValidateCode?time=" + (new Date()).getTime();
        });
        //alert("good");
    });
</script>